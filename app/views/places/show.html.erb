<!-- Place details page -->

<h1> <%= @place["name"] %> </h1>

<h3>Posts</h3>

<ul>
<% for post in @posts %>
  <li> 
  <a href="/posts/show?place_id= <%=@place["id"]%>"> <%= post["title"]%> </li>
<% end %>
</ul>

<p>
  <a href="/posts/new?place_id= <%=@place["id"]%>"> New Post</a>
</p>

<p><%= button_to "Delete this place", @place, :method => "delete" %></p>

<p>
  <a href="/places">Back to All Places</a>
</p>